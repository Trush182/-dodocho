<div class="container h-100">
  <div class="d-flex flex-column h-100 py-3 flex-grow-1">
    <%= link_to "Retour", rooms_path, class: "button-back" %>
    <div class="image-tag">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="rounded carousel-inner">
          <div class="carousel-item active">
            <%= cl_image_tag @room.photos.first.key, height: 250, width: 350, class: "d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @room.photos.second.key, height: 250, width: 350, class: "d-block w-100" %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Suivant</span>
        </button>
      </div>
    </div>

    <div class="mt-3 mb-4 py-3 container card-background d-flex flex-grow-1">
      <div class="card-description-wrapper">
      <h4><%= @room.title %></h4>
      <p><%= @room.summary %></p>
    </div>
  </div>
  <%= link_to "Effectuer la demande", seeker_room_housing_requests_path(@room), method: :post, class: "btn btn-gradient btn-block btn-lg" %>
</div>
