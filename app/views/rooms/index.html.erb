
<div class="container mt-5">
  <h1 style="font-size: 2em;">Chambres disponibles</h1>
  <p>Vous avez demandé aux hôtes de vous loger pour <%= session[:nights_count_chosen] %> nuitées</p>
</div>
<div class="container my-5">
  <div class="row">

    <% @rooms.each do |room| %>
      <%= link_to room_path(room), class:"text-decoration-none text-dark d-inline-block w-100" do %>
        <div class="card-index shadow col-12 mt-3">
          <%= cl_image_tag room.photos.first.key, width: 300, height: 250, class: "card-index-image-wrapper" %>

          <div class="card-footer-description-wrapper p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex flex-row">
              <% if room.has_tv %>
                <i class="fas fa-1x fa-tv mr-2"></i>
              <% end %>
              <% if room.has_internet %>
                <i class="fas fa-1x fa-wifi mr-2"></i>
              <% end %>
              <% if room.has_books %>
                <i class="fas fa-1x fa-book mr-2"></i>
              <% end %>
              <% if room.has_personal_bathroom %>
                <i class="fas fa-1x fa-sink mr-2"></i>
              <% end %>
            </div>
            <%= room.title %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to 'Modifier mes choix', edit_seeker_offered_services_path, class: "btn btn-gradient btn-block btn-lg mb-3 d-inline-block" %>
</div>
