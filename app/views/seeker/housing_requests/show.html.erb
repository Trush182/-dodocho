<div class="container show-room h-100">
  <div class="d-flex flex-column h-100 py-3 mb-5 flex-grow-1">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
        <div class="carousel-inner rounded">
          <div class="carousel-item active">
            <%= cl_image_tag @room.photos.first.key, height: 250, class: "cover d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @room.photos.second.key, height: 250, class: "cover d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= cl_image_tag @room.photos.last.key, height: 250, class: "cover d-block w-100" %>
          </div>
        </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
      </a>
    </div>
      <br>
      <div class="card-description-wrapper flex-grow-1">

        <% if @can_see_details %>
          <p>Retrouvez moi au <a target="_blank" href="<%= "https://www.google.com/maps?saddr=My+location&daddr=#{@room.address}" %>"><%= @room.address %></a></p>
          <p>Me contacter au <a href="<%=  "tel:#{@room.host.phone_number}" %>"><%=@room.host.phone_number%></a></p>
        <% end %>
      </div>
    <div class="mt-3 py-3 container card-background rounded flex-column d-flex flex-grow-1">

      <div class="text-warning d-flex align-self-end font-weight-bold 1.8rem mb-3">
      </div>

      <div class="card-footer-description-wrapper d-flex justify-content-around px-3 mx-auto py-3 row">
        <h4><%= @room.title %></h4>
        <br>
        <p><%= @room.summary %></p>

      </div>



      <br>

      <div class="card-footer-description-wrapper d-flex justify-content-around px-3 mx-auto py-3 row">
        <% if @room.has_tv %>
          <i class="fas fa-1x fa-tv mr-2"></i>
        <% end %>
        <% if @room.has_internet %>
          <i class="fas fa-1x fa-wifi mr-2"></i>
        <% end %>
        <% if @room.has_books %>
          <i class="fas fa-1x fa-book mr-2"></i>
        <% end %>
        <% if @room.has_personal_bathroom %>
          <i class="fas fa-1x fa-sink mr-2"></i>
        <% end %>

      </div>

      <%= link_to "Revenir à mes demandes", seeker_housing_requests_path, class: "btn btn-gradient btn-block btn-lg mt-5" %>
    </div>
  </div>
</div>
