
<div class="home-bg px-3">
  <%= image_tag 'service-icons/main_logo.svg', class: "home-logo" %>

  <br>
  <br>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: "text-light" },
                  input_html: { autocomplete: "email", class: "border-color"} %>
      <%= f.input :password,
                  required: false,
                  label_html: { class: "text-light" },
                  input_html: { autocomplete: "current-password", class: "border-color"} %>
      <%= f.input(:remember_me, as: :boolean, label_html: { class: "text-light" }) if devise_mapping.rememberable? %>
    </div>

    <br>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-gradient w-100 py-3" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
